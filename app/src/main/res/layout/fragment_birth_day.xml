<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/woman_month_short"
            android:textColor="@color/black_item_title"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/et_woman_month_short"
            style="@style/myEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/general_margin"
            android:hint="@string/woman_month_short"
            android:inputType="number"
            android:padding="2dp"
            android:textColor="@color/black_item_title"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/woman_month_long"
            android:textColor="@color/black_item_title"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/et_woman_month_long"
            style="@style/myEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/general_margin"
            android:hint="@string/woman_month_long"
            android:inputType="number"
            android:padding="2dp"
            android:textColor="@color/black_item_title"
            android:textSize="16dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_woman_month_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_bg_transparent_light_green"
        android:drawableRight="@mipmap/r_arrow"
        android:gravity="center_vertical"
        android:minHeight="@dimen/finger_width"
        android:padding="4dp"
        android:text="@string/woman_month_last"
        android:textColor="@color/black_item_title"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:lineSpacingMultiplier="1.5"
        android:padding="5dp"
        android:textColor="@color/colorAccent"
        android:textSize="16dp" />

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/selector_bt_bg_accent"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="16dp" />

</LinearLayout>