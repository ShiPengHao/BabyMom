<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_transparent_grey"
    android:padding="@dimen/general_margin">

    <TextView
        android:id="@+id/item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/general_margin"
        android:padding="4dp"
        android:text="@string/uncomplete"
        android:textColor="@color/colorAccent" />

    <ImageView
        android:id="@+id/item_pic"
        android:layout_width="@dimen/general_pic"
        android:layout_height="@dimen/general_pic"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_launcher" />


    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/general_margin"
        android:layout_toLeftOf="@id/item_status"
        android:layout_toRightOf="@id/item_pic"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:text="@string/title"
        android:textColor="@color/black_item_title"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/item_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_pic"
        android:layout_alignLeft="@id/item_title"
        android:layout_below="@id/item_title"
        android:layout_toLeftOf="@id/item_status"
        android:layout_toRightOf="@id/item_pic"
        android:ellipsize="end"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="@string/des"
        android:textColor="@color/black_item_content"
        android:textSize="14dp" />


</RelativeLayout>